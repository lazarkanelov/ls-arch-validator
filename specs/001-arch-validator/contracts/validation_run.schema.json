{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ls-arch-validator/schemas/validation_run.json",
  "title": "ValidationRun",
  "description": "A complete execution of the validation pipeline",
  "type": "object",
  "required": ["id", "started_at", "status", "trigger", "parallelism", "localstack_version"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^run-[0-9]{8}-[0-9]{6}$",
      "description": "Run identifier in format run-YYYYMMDD-HHMMSS"
    },
    "started_at": {
      "type": "string",
      "format": "date-time"
    },
    "completed_at": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["running", "completed", "failed"]
    },
    "trigger": {
      "type": "string",
      "enum": ["scheduled", "manual"]
    },
    "parallelism": {
      "type": "integer",
      "minimum": 1,
      "maximum": 16,
      "default": 4
    },
    "localstack_version": {
      "type": "string",
      "default": "latest"
    },
    "statistics": {
      "type": ["object", "null"],
      "properties": {
        "total_architectures": {
          "type": "integer",
          "minimum": 0
        },
        "passed": {
          "type": "integer",
          "minimum": 0
        },
        "partial": {
          "type": "integer",
          "minimum": 0
        },
        "failed": {
          "type": "integer",
          "minimum": 0
        },
        "skipped": {
          "type": "integer",
          "minimum": 0
        },
        "pass_rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "required": ["total_architectures", "passed", "partial", "failed", "skipped", "pass_rate"]
    },
    "timing": {
      "type": ["object", "null"],
      "properties": {
        "mining_seconds": {
          "type": "number",
          "minimum": 0
        },
        "generation_seconds": {
          "type": "number",
          "minimum": 0
        },
        "running_seconds": {
          "type": "number",
          "minimum": 0
        },
        "reporting_seconds": {
          "type": "number",
          "minimum": 0
        },
        "total_seconds": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": ["mining_seconds", "generation_seconds", "running_seconds", "reporting_seconds", "total_seconds"]
    },
    "results": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of ArchitectureResult IDs"
    },
    "token_usage": {
      "type": "integer",
      "minimum": 0,
      "description": "Total Claude API tokens used"
    },
    "token_budget": {
      "type": "integer",
      "minimum": 0,
      "description": "Configured token budget"
    }
  }
}
